<div class="home-page-jumbo jumbotron">

    <div class="button-container text-center">

      <p class="readyToRun">Ready to run?</p>

        <a class="newRacesBtn btn btn-dark" href="/results/scrape">Find New Races</a>

        <a class="removeRacesBtn btn btn-dark" href="/clear">Remove Races</a>

    </div>

</div>


<div class="card-container container">

    {{#each races}}

    <div class="card col-3">

    <div class="text-center">
        <a data-id="{{id}}" data-saved="{{saved}}" data-toggle="modal" data-target="#successfullySaved" class="saveBtn btn btn-light-secondary" href="/save"><i class="fas fa-plus-square"> </i>Save</a>

    </div>
    
    <p class="race">{{race}}</p>

    <p class="date">{{date}} | {{location}} </p>
     {{!-- <p class="location">{{location}}</p> --}}
    <p class="raceDesc">{{raceDescription}}</p>

    

   
    <div class="row">
  <a class="redirectLink btn btn-outline-success" href="https://www.runningintheusa.com/{{redirectLink}}">More info</a>
    <a class="googleMaps btn btn-outline-warning" href="{{googleMapsLink}}">Google Maps</a>
    </div>

  
    
    </div>

     {{/each}}

</div>


<div class="modal fade" id="successfullySaved" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Nice!</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        This race was successfully saved! 
      </div>
      <div class="modal-footer">
        {{!-- <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button> --}}
      </div>
    </div>
  </div>
</div>

